{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "charity-m3/video-embed",
  "title": "Styled Video Embed (M3)",
  "category": "charity-m3-components",
  "description": "Embeds a video from YouTube, Vimeo, etc., within a styled, responsive container.",
  "keywords": ["video", "embed", "youtube", "vimeo", "m3"],
  "icon": "video-alt3",
  "textdomain": "charity-m3",
  "attributes": {
    "url": {
      "type": "string",
      "default": ""
    },
    "caption": {
      "type": "string",
      "source": "html",
      "selector": "figcaption"
    },
    "aspectRatio": {
        "type": "string",
        "default": "16/9"
    }
  },
  "supports": {
    "html": false,
    "align": ["wide", "full"]
  },
  "editorScript": "charity-m3-video-embed-editor-script"
}
